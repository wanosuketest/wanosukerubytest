<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<% if current_user?(@user) %>
				<h1><%= @user.name %>さん、こんにちは！</h1>
			<% else %>
				<h1><%= @user.name %>さんのページです</h1>
			<% end %>
		</section>
	</aside>

	<% if current_user?(@user) %>
		<div class="col-md-8">
			<% if @user.tasks.any? %>
				<h3>タスクは現在<%= @user.tasks.count %>個登録中です。</h3>
				<ol class="microposts">
					<%= render @tasks %>
				</ol>
				<%= paginate @tasks %>
			<% end %>
		</div>
		<div class="row">
			<aside class="col-md-4">
				<section class="micropost_form">
					<%= render :partial => 'shared/task_form' , :locals => { :object => @user} %>
				</section>
			</aside>
		</div>
	<% end %>
</div>