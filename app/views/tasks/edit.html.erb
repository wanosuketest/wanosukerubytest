<h1>タスク編集画面</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@task) do |f| %>
		<%= render 'shared/error_messages' , object:f.object %>

			<%= f.label :content %>
			<%= f.text_field :content, class: 'form-control' %>

			<%= f.submit "更新する", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>