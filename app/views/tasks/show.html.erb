<h1>タスク詳細画面</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@task) do |f| %>
			<%= f.label :content %>
			<%= f.text_field :content, class: 'form-control',:readonly => true %>
		<% end %>
		<div class="col-md-6 col-md-offset-5" ><%= link_to "一覧へ戻る",user_path(@task.user) %></div>
	</div>
</div>